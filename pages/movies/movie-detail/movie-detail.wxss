@import "../stars/stars-template.wxss";
.container {
    display: flex;
    flex-direction: column;
}
.head-img {
    width: 100%;
    height: 320rpx;
    -webkit-filter:blur(20px);
}

.head-image-hover {
    width: 100%;
    height: 320rpx;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
}

.main-title {
    font-size: 19px;
    color:#fff;
    font-weight:bold;
    margin-top: 50rpx;
    margin-left: 40rpx;
    letter-spacing: 2px;
}

.sub-title {
    font-size: 28rpx;
    color: #fff;
    margin-left: 40rpx;
    margin-top: 30rpx;
}

.like {
    display: flex;
    flex-direction: row;
    margin-left: 40rpx;
    margin-top: 60rpx;
}

.highlight-font {
    font-size: 22rpx;
    margin-right: 10rpx;
    color: #f21146
}

.plain-font {
    font-size: 22rpx;
    margin-right: 30rpx;
    color: #666;
}

.movie-img {
    position: absolute;
    height:238rpx;
    width: 175rpx;
    top:160rpx;
    right: 30rpx;
}

.summary {
    margin-left:40rpx;
    margin-top: 40rpx;
    color: #777777;
}

.original-title{
    color: #1f3463;
    font-size: 24rpx;
    font-weight: bold;
    margin-bottom: 40rpx;
}

.flex-row{
    display:flex;
    flex-direction: row;
    margin-bottom: 10rpx;
}

.mark{
    margin-right: 30rpx;
    white-space:nowrap;
    color: #999999;
}

.hr {
    margin-top: 45rpx;
    width: 100%;
    height: 2rpx;
    background-color: #d9d9d9;
}

.synopsis {
    display: flex;
    flex-direction: column;
    margin-left: 40rpx;
}

.synopsis-font {
    margin-top: 50rpx;
    color: #999999;
    margin-bottom: 20rpx;
}

.summary-content {
    margin-right: 40rpx;
    line-height:40rpx;
    letter-spacing: 1px;
}

.cast {
    display: flex;
    flex-direction: column;
    margin-left: 40rpx;
}

.cast-font {
    color: #999;
    margin-top: 50rpx;
    margin-bottom: 40rpx;
}

.cast-imgs {
    display: flex;
    flex-direction: row;
    white-space: nowrap;
}

.cast-container {
    display: inline-flex;
    flex-direction: column;
    margin-bottom:50rpx;
    margin-right:40rpx;
    width:170rpx;
    text-align:center;
    white-space:normal;

}

.cast-img {
    width: 170rpx;
    height: 210rpx;
}

.cast-name{
    margin: 10rpx auto 0;
}
