page {
  background-color: #b3d4db;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.avatar {
    width: 200rpx;
    height: 200rpx;
    border-radius: 200rpx;
    margin-top: 100rpx;
}

.user-name {
    margin-top: 200rpx;
    font-size: 32rpx;
    font-weight: bold;
}

.moto-container {
    margin-top: 200rpx;
    height: 80rpx;
    width: 200rpx;
    border: 1px solid #405f80;
    border-radius: 5px;
    text-align: center;
}

.moto {
    font-size: 22rpx;
    color: #405f80;
    line-height: 80rpx;
}