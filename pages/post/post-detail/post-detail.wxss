.container {
    display: flex;
    flex-direction: column;
}

.music-image {
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    left: 50%;
    margin-left: -60rpx;
    top: 180rpx;
}

.head-image {
    width: 100%;
    height: 460rpx;
}

.author-date {
    flex-direction: row;
    margin-left: 30rpx;
    margin-top: 20rpx;
}

.avatar {
    width: 64rpx;
    height: 64rpx;
    vertical-align: middle;
}

.author {
    font-size: 40rpx;
    font-weight: 300;
    margin-left: 20rpx;
    color: #666;
    vertical-align: middle;
}

.const-text {
    font-size: 24rpx;
    color: #999;
    margin-left: 20rpx;
}

.date {
    font-size: 24rpx;
    color: #999;
    margin-left: 30rpx;
}

.title {
    margin-left: 40rpx;
    font-size: 36rpx;
    font-weight: 700;
    margin-top: 30rpx;
    letter-spacing: 2px;
    color: #4b446c;
}

.tool {
    margin-left: 20rpx;
    margin-top: 20rpx;
}

.circle-img {
    float: right;
    margin-left: 40rpx;
}

.circle-img image {
    width: 80rpx;
    height: 80rpx;
}

.share-img {
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.horizon {
    width: 660rpx;
    height: 1px;
    background: #e5e5e5;
    position: relative;
    top: 46rpx;
    margin: 0 auto;
    z-index: -99;
}

.detail {
    color: #666;
    letter-spacing: 2px;
    font-size: 24rpx;
    margin: 20rpx 30rpx 20rpx 30rpx;
}