<view class="container">
    <swiper indicator-dots autoplay>
        <swiper-item>
            <image src="/images/wx.png"></image>
        </swiper-item>
        <swiper-item>
            <image src="/images/vr.png"></image>
        </swiper-item>
        <swiper-item>
            <image src="/images/iqiyi.png"></image>
        </swiper-item>
    </swiper>

    <block>
        <view class="post-container" wx:for="{{ post_content }}" wx:key="index">
            <view class="post-author-date">
                <image class="post-author" src="{{ item.avatar }}"></image>
                <text class="post-date">{{ item.date }}</text>
            </view>

            <text class="post-title">{{ item.title }}</text>

            <image class="post-banner" src="{{ item.imgSrc }}"></image>

            <text class="post-content">{{ item.content }}</text>

            <view class="post-like">
                <image class="post-icon" src="/images/icon/none-star.png"></image>
                <text class="post-num">{{ item.collection }}</text>
                <image class="post-icon" src="/images/icon/view.png"></image>
                <text class="post-num">{{ item.reading }}</text>
            </view>
        </view>
    </block>
</view>